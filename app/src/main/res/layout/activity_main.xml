<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A2D3A"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/IMG_battery"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/ic_battery"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/IMG_bluetooth"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/ic_bt"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/IMG_nfc"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/ic_nfc"/>

    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/IMG_lock"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:layout_above="@id/TXT_title"
        android:src="@drawable/ic_lock_close"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/TXT_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:text="Login App"
        android:textColor="#FFFFFF"
        android:textSize="55sp"
        android:fontFamily="sans-serif-light"
        android:layout_centerInParent="true"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/BTN_login"
        android:layout_width="170dp"
        android:layout_below="@id/TXT_title"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:text="Login"/>

</RelativeLayout>